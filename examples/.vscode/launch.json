{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Local Orchestrator Cloud - AWS",
      "consoleTitle": "AWS - Orchestrator",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/worker.py",
      "python": "${workspaceFolder}/.venv/bin/python",
      "windows": {
        "python": "${workspaceFolder}/.venv/Scripts/python.exe"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Frontend mocked",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run start:mocked",
      "cwd": "${workspaceFolder}/employees-manager-fe"
    },
    {
      "name": "Frontend",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}/employees-manager-fe"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Backend",
      "cargo": {
        "args": [
          "build",
          "--bin=employees-manager",
          "--package=employees-manager"
        ],
        "filter": {
          "name": "employees-manager",
          "kind": "bin"
        }
      },
      "env": {
        "DEPLOY_ENVIRONMENT": "dev",
        "LOCAL": "true",
        "FRONTEND_MODE": "external",
        "RUST_BACKTRACE": "1"
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Backend Opt",
      "cargo": {
        "args": [
          "build",
          "--bin=employees-manager",
          "--package=employees-manager",
          "--release"
        ],
        "filter": {
          "name": "employees-manager",
          "kind": "bin"
        }
      },
      "env": {
        "DEPLOY_ENVIRONMENT": "dev",
        "LOCAL": "true",
        "RUST_BACKTRACE": "1"
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "MongoDB Index Setup",
      "cargo": {
        "args": [
          "build",
          "--bin=mongodb_index_setup",
          "--package=employees-manager"
        ],
        "filter": {
          "name": "mongodb_index_setup",
          "kind": "bin"
        }
      },
      "env": {
        "DEPLOY_ENVIRONMENT": "dev",
        "LOCAL": "true",
        "RUST_BACKTRACE": "1"
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
